<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:property="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zl.countdownview.MainActivity">

    <com.zl.countdownview.CountDownView
        android:id="@+id/cdv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        property:background_color="#509d9d9d"
        property:progress_color="#1AFD9C"
        property:text="跳过"
        property:text_color="#fff"
        property:text_size="30dp"/>

</RelativeLayout>
